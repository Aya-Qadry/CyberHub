@model CyberHub.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberHub</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-content">
            <div class="login-form-section">
                @* <div class="logo-section"> *@
                @*     <div class="logo"> *@
                @*         <span class="logo-text">CyberHub</span> *@
                @*     </div> *@
                @* </div> *@

                <div class="form-container">
                    <h1 class="form-title">Log in to CyberHub</h1>

                    <p class="signup-link">
                        Don't have an account yet? <a href="/Account/Register" class="link-primary">Sign up for free</a>
                    </p>

          

                    <form asp-action="Login" method="post" class="login-form">
                        @* <div asp-validation-summary="All" class="text-danger validation-summary"></div> *@

                        <div class="form-group">
                            <input asp-for="Email" class="form-input" placeholder="name@work-email.com" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger field-validation"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Password" class="form-input" type="password" placeholder="Password" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger field-validation"></span>
                        </div>

                        <div class="form-options">
                            <div class="remember-me">
                                <input asp-for="RememberMe" type="checkbox" class="checkbox-input" id="rememberMe" />
                                <label asp-for="RememberMe" class="checkbox-label" for="rememberMe">Remember me?</label>
                            </div>
                            <div class="form-links">
                                <span class="link-separator">|</span>
                                <a href="#" class="link-secondary">Forgot password?</a>
                            </div>
                        </div>

                        <button type="submit" class="btn-login">Log in</button>
                    </form>
                </div>
            </div>

            <div class="illustration-section">
                <img src="~/images/logo-CH.png" alt="CyberHub Logo" class="illustration-logo" />
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>