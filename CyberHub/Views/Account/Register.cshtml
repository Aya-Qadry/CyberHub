@model CyberHub.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberHub</title>
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="login-content">
            <div class="login-form-section">
                @* <div class="logo-section"> *@
                @*     <div class="logo"> *@
                @*         <span class="logo-text">CyberHub</span> *@
                @*     </div> *@
                @* </div> *@

                <div class="form-container">
                    <h1 class="form-title">Create your CyberHub account</h1>

                    <p class="signup-link">
                        Already have an account? <a href="/Account/Login" class="link-primary">Log in</a>
                    </p>

                    <div class="social-buttons">
                        <button type="button" class="btn-social btn-google">
                            <svg width="18" height="18" viewBox="0 0 18 18">
                                <path fill="#4285F4" d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 0 0 2.38-5.88c0-.57-.05-.66-.15-1.18z" />
                                <path fill="#34A853" d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2.04a4.8 4.8 0 0 1-2.7.75 4.8 4.8 0 0 1-4.52-3.36H1.83v2.07A8 8 0 0 0 8.98 17z" />
                                <path fill="#FBBC05" d="M4.46 10.41a4.8 4.8 0 0 1-.25-1.41c0-.49.09-.97.25-1.41V5.52H1.83a8 8 0 0 0 0 7.17l2.63-2.28z" />
                                <path fill="#EA4335" d="M8.98 3.58c1.32 0 2.5.45 3.44 1.35l2.54-2.54A8 8 0 0 0 8.98 1a8 8 0 0 0-7.15 4.42l2.63 2.28c.61-1.94 2.39-3.36 4.52-3.36z" />
                            </svg>
                            Sign in with Google
                        </button>

                        <button type="button" class="btn-social btn-github"> 
                             <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"> 
                                 <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" /> 
                             </svg> 
                          Sign in with GitHub 
                            </button>
                    </div>



                    <div class="divider">
                        <span>Or</span>
                    </div>

                    <form asp-action="Register" method="post" class="login-form">
                       
                        <div class="form-group-row">
                            <div class="form-group half-width">
                                <input asp-for="UserName" class="form-input" placeholder="Username" />
                                <span asp-validation-for="UserName" class="text-danger field-validation"></span>
                            </div>

                            <div class="form-group half-width">
                                <input asp-for="PhoneNumber" class="form-input" placeholder="Phone Number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger field-validation"></span>
                            </div>
                        </div>
    
                        <div class="form-group">
                            <input asp-for="Email" class="form-input" placeholder="name@work-email.com" />
                            <span asp-validation-for="Email" class="text-danger field-validation"></span>
                        </div>

                       

                        <div class="form-group">
                            <input asp-for="Password" class="form-input" type="password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger field-validation"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger field-validation"></span>
                        </div>

                        <button type="submit" class="btn-login">Register</button>
                    </form>
                
                </div>
            </div>

            <div class="illustration-section">
                <img src="~/images/logo-CH.png" alt="CyberHub Logo" class="illustration-logo" />
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
    