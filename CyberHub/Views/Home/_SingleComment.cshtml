@model CyberHub.ViewModels.CommentViewModel

<div class="comment" style="padding: 8px; border-bottom: 1px solid #333; display: flex; align-items: flex-start; gap: 10px;">
    <div class="comment-avatar" style="width: 30px; height: 30px; border-radius: 50%; background: #444; display: flex; align-items: center; justify-content: center; font-size: 12px; flex-shrink: 0;">
        @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
        {
            <img src="@Url.Content(Model.AuthorProfileImageUrl)" alt="@Model.AuthorName" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;" />
        }
        else
        {
            @(Model.AuthorName.Length >= 2 ? Model.AuthorName.Substring(0, 2).ToUpper() : Model.AuthorName.ToUpper())
        }
    </div>
    <div class="comment-content" style="flex: 1;">
        <div style="margin-bottom: 4px;">
            <strong>@Model.AuthorName</strong> •
            <small>@Model.CreatedAt.ToString("MMM dd, HH:mm")</small>
        </div>
        <p style="margin: 0;">@Model.Content</p>
    </div>
</div>